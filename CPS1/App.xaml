<?xml version="1.0" encoding="utf-8"?>

<Application xmlns:local="clr-namespace:CPS1" StartupUri="View/MainWindow.xaml"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:CPS1.Converters"
             x:Class="CPS1.App"
             DispatcherUnhandledException="ApplicationDispatcherUnhandledException">
    <Application.Resources>
        <system:Int16 x:Key="First">1</system:Int16>
        <system:Int16 x:Key="Second">2</system:Int16>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:VisibilityInversionConverter x:Key="VisibilityInversionConverter" />
        <converters:LogarithmConverter x:Key="LogarithmConverter" />
        <Image x:Key="ButtonBackground" Source="../resources/ButtonBackground.png" />

        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0 10 0 10" />
        </Style>
    </Application.Resources>
</Application>
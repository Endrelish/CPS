                        </TabItem>
                    </TabControl>
                </ScrollViewer>
                <view:AnalogDigitalSignalChart Grid.Row="1" Grid.Column="1" Style="{StaticResource ChartStyle}"/>
            </Grid>
        </TabItem>
    </TabControl>
    </Grid>
</Window>